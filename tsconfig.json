{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": ["es2016", "dom"], //or es6 instead of es2016(es7),
    "types": [
    "core-js"
    ],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false
  },
  "exclude": [
   "node_modules",
   "node_modules/@typings",
   "typings"
  ]
}